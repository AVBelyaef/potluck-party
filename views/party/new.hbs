<h1>Create a party</h1>

{{#if errors}}
    <span>Something went wrong:</span>
    <ul class="error-list pad-b-2">
        {{#each errors as |error|}}
            <li class="error-item">{{error}}</li>
        {{/each}}
    </ul>
{{/if}}


<form method="post" action="/party">
  <label for="title-input" class="block mar-b-1">Name:</label>
  <input required id="title-input" name="name" type="text" value="{{party.name}}" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">

  <label for="body-textarea" class="block mar-b-1">location:</label>
  <textarea rows="1" required id="body-textarea" name="location" type="text" tabindex="2" class="block w-100 no-outline no-border pad-1 mar-b-2">{{party.location}}</textarea>

    <label for="title-input" class="block mar-b-1">startsAt:</label>
    <input required id="title-input" name="startsAt"  type="datetime-local" style="color: #2196f3;" value="{{party.startsAt}}" tabindex="1" class="block w-100 no-outline no-border pad-1 mar-b-2">

    <input type="submit" value="Create a party" tabindex="3" class="block button w-100 mar-t-4 mar-b-3 pad-2 round-1 text-c center no-border no-outline">
</form>
